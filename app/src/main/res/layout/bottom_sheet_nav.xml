<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/vie"
        android:background="@drawable/rounded_sheet"/>
        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="16dp"
            android:layout_above="@id/navigation_view"
            android:background="@color/colorPrimaryLight"
            app:menu="@menu/bottomappbar_menu"
            app:itemIconTint="@color/state_list"
            app:itemTextColor="@color/state_list"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/materialorange"
            android:fontFamily="@font/googlesans"
            android:background="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:text="Made in Techno and with ❤"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/rsvyas"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="6dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/profilephoto"
        android:layout_centerHorizontal="true"
        />
</FrameLayout>