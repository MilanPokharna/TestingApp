<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.Canteen">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:divider="?dividerHorizontal"
                android:showDividers="middle"
                android:background="#e3f2fd"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:textAlignment="center"
                    android:text="Thali\nâ‚¹40"
                    android:gravity="center"
                    android:textColor="@color/materiablue"
                    android:fontFamily="@font/googlesans"
                    android:textSize="20sp"
                    android:id="@+id/thali" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="Masala Bhindi , Daal , Chawal , Salaad , Chhachh "
                    android:fontFamily="@font/googlesans"
                    android:id="@+id/thaliitem" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:paddingBottom="4dp"
                android:scrollbars="vertical"
                android:scrollbarThumbVertical="@color/scrollcolor"
                android:layout_marginRight="8dp"
                android:id="@+id/recyclerView3">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

</FrameLayout>