<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tushar"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.florent37.arclayout.ArcLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:arc_cropDirection="cropOutside"
            app:arc_height="30dp"
            app:arc_position="right"
            android:layout_alignParentLeft="true"
            android:id="@+id/arc"
            android:elevation="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/profileImage1"
                android:src="@drawable/tusharimg"
                />

        </com.github.florent37.arclayout.ArcLayout>


        <TextView
            android:fontFamily="@font/googlesans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tushar Jain"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:id="@+id/name"/>

        <TextView
            android:fontFamily="@font/googlesans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:layout_below="@+id/name"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:id="@+id/branch"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_alignStart="@+id/branch"
            android:layout_marginTop="4dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:id="@+id/view"
            android:layout_below="@+id/branch"
            android:background="@android:color/darker_gray"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_pro"
            android:autoLink="all"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="tusharjn16@gmail.com"
            android:drawableLeft="@drawable/ic_mail_black"
            android:drawablePadding="20dp"

            android:layout_marginRight="30dp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linkdin_prot"
            android:layout_alignStart="@+id/email_pro"
            android:layout_below="@+id/email_pro"
            android:layout_marginTop="10dp"
            android:text="tusharjn"
            android:textColor="@color/materiablue"
            android:layout_marginRight="30dp"
            android:textAlignment="center"
            android:drawableLeft="@drawable/ic_orion_linkedin_2"
            android:drawablePadding="20dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobno_pro"
            android:autoLink="all"
            android:layout_alignStart="@+id/linkdin_prot"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/linkdin_prot"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="9680346841"

            android:drawableLeft="@drawable/ic_contact_black"
            android:drawablePadding="20dp"
            />




    </RelativeLayout>

</android.support.v7.widget.CardView>
